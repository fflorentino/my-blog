<% provide(:page_title, 'All Posts') %>
<% provide(:author, 'active') %>


<div class="row">
	<div>
		<%= link_to 'New post', new_authors_post_path, class: 'btn btn-primary btn-lg' %>
	</div>
	<br>
	<br>
	<br>
	<table class="table table-striped">
		<tr>
			<th colspan="5">Title</th>
		</tr>
	<% @posts.each do |post| %>
    	<%= render post %>
    	
  	<% end %>
  	</table>
</div>